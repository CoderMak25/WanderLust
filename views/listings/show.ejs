<% layout("/layouts/boilerplate") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="container py-4">

  <!-- TITLE -->
  <div class="row mb-4">
    <div class="col-12">
      <h2 class="fw-bold"><%= listing.title %></h2>
    </div>
  </div>

  <!-- IMAGE + DETAILS -->
  <div class="row g-4">

    <!-- IMAGE INSIDE CARD -->
    <div class="col-12 col-md-6">
      <div class="card shadow-sm border">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top img-fluid rounded"
          alt="listing_image"
          style="max-height: 350px; object-fit: cover;"
        />
      </div>
    </div>

    <!-- DETAILS CARD -->
    <div class="col-12 col-md-6">
      <div class="card shadow-sm p-3 border">
        <p>Owned by <strong><%= listing.owner.username %></strong></p>
        <p><%= listing.description %></p>
        <p class="fs-5 fw-semibold">â‚¹ <%= listing.price.toLocaleString("en-IN") %></p>
        <p><strong>Location:</strong> <%= listing.location %></p>
        <p><strong>Country:</strong> <%= listing.country %></p>

        <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="d-flex gap-3 mt-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-dark">Edit</a>

          <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
            <button class="btn btn-outline-danger">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>

  </div> <!-- row -->

  <!-- REVIEW FORM -->
  <% if(currUser){ %>
  <div class="row mt-5">
    <div class="col-12 col-lg-8">
      <hr />
      <h4 class="mb-3">Leave a review</h4>

      <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">

        <label class="form-label">Rating</label>
        <fieldset class="starability-coinFlip mb-3 ">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked/>
          <input type="radio" id="r1" name="review[rating]" value="1"/><label for="r1">1</label>
          <input type="radio" id="r2" name="review[rating]" value="2"/><label for="r2">2</label>
          <input type="radio" id="r3" name="review[rating]" value="3"/><label for="r3">3</label>
          <input type="radio" id="r4" name="review[rating]" value="4"/><label for="r4">4</label>
          <input type="radio" id="r5" name="review[rating]" value="5"/><label for="r5">5</label>
        </fieldset>

        <label class="form-label">Comments</label>
        <textarea name="review[comment]" rows="4" class="form-control" required></textarea>

        <button class="btn btn-outline-dark mt-3">Submit</button>
      </form>
    </div>
  </div>
  <% } %>

  <!-- REVIEWS -->
  <div class="row mt-5">
    <div class="col-12 col-lg-8">
      <hr />
      <% if(!listing.reviews.length){ %>

        <h4>No Reviews Yet</h4>

      <% } else { %>

        <h4 class="mb-3">All Reviews</h4>

        <div class="row g-3">
          <% for(review of listing.reviews){ %>
          <div class="col-12 col-md-6 ">
            <div class="card border shadow-sm h-100 ">
              <div class="card-body ms-3 mb-2">
                <h5 class="card-title">@<%= review.author.username %></h5>
                <p class="starability-result" data-rating="<%= review.rating %>"></p>
                <p><%= review.comment %></p>

                <% if(currUser && currUser._id.equals(review.author._id)){ %>
                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                  <button class="btn btn-sm btn-outline-dark">Delete</button>
                </form>
                <% } %>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      <% } %>
    </div>
  </div>

  <!-- MAP -->
  <div class="row mt-5">
    <div class="col-12 col-lg-8">
      <h4 class="mb-3">Where you'll be</h4>
      <div id="map" class="rounded shadow-sm" style="height: 20rem; width: 100%;"></div>
    </div>
  </div>

</div> <!-- container -->

<script src="/js/map.js"></script>
